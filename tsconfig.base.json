{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "useDefineForClassFields": true,
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": false,
        "allowJs": false,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": false,
        "types": [
            "node",
            "vite/client"
        ],
        "paths": {
            "nuxt-ui": [ "./packages/nuxt-ui/src/index.ts" ],
            "@nuxt-ui/components": [ "./packages/components/index.ts" ],
            "@nuxt-ui/utils": [ "./packages/utils/index.ts" ],
            "@nuxt-ui/preset": [ "./packages/preset/src/index.ts" ],
            "@nuxt-ui/cli": [ "./packages/cli/src/index.ts" ],
        }
    },
    "exclude": [
        "**/dist/**",
        "**/node_modules/**",
        "**/playground/**",
        "**/test/dts/**"
    ]
}
